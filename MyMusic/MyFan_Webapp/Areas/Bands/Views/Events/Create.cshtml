@model MyFan_Webapp.Areas.Bands.Models.BandProfileViewModel

@{
    ViewBag.Title = "Crear";
    Layout = "~/Areas/Bands/Views/Shared/_BandProfileLayout.cshtml";
}

<head>
    <script src="~/assets/lib/jquery/jquery-2.2.4.min.js" type="text/javascript"></script>
    <!-- jQuery Validate -->
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.7/jquery.validate.min.js"></script>
    <!-- Style -->
    <link crossorigin="anonymous" href="~/assets/common/css/foms/Register.css" rel="stylesheet">
    <script src="~/assets/common/js/Processing.js"></script>
    <script src="~/assets/common/js/forms/EventCreateForm.js"></script>
    <link rel="stylesheet" href="~/assets/common/css/Profile.css">
</head>

<body>
    <!-- Post-Section -->
    <div id="post-section" class="row">
        <h2 class="post-header">Create Event</h2>
        <div class="row">
            <div class="col-md-10">

                <form id="form-new-event" class='form-horizontal'>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputEventName">Title:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" placeholder="What's the name of your event?'" name="EventTitle" id="EventTitle"/>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-xs-5 col-xs-offset-3">
                            <div class="form-group">
                                <div class="col-xs-3 text-right">
                                    <label for="inputDate">Date:</label>
                                </div>
                                <div class="col-xs-6">
                                    <input type="date" class="form-control" placeholder="Event Date" name="EventDate" id="EventDate" />
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <div class="col-xs-3 text-right">
                                    <label for="inputTime">Time:</label>
                                </div>
                                <div class="col-xs-6">
                                    <input type="time" class="form-control" placeholder="Event Time" name="EventTime" id="EventTime" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputDate">Event Type:</label>
                        </div>
                        <div class="col-xs-6">
                            <select class="selectpicker" id="EventTypeID" name="EventType" data-width="100%">
                                <option id="true">Concert</option>
                                <option id="false">Not Concert</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputDate">Event State:</label>
                        </div>
                        <div class="col-xs-6">
                            <select class="selectpicker" id="EventStateID" name="EventState" data-width="100%" disabled>
                                <option id="0" selected>Pending</option>
                                <option id="1">Finalized</option>
                                <option id="2">Cancelled</option>
                            </select>
                            <small>Yo may change this value when the event has already been published.</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputLocation">Location:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" placeholder="Where is the event going to happen?" name="EventLocation" id="EventLocation" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputContent"></label>
                        </div>
                        <div class="col-xs-9">
                            <div class="form-group">
                                <textarea class="form-control" rows="10" name="EventContent" placeholder="Tell your fans something about it..." id="EventContent"></textarea>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-offset-4 col-xs-3">
                                <button id="post-event" type="button" class="btn btn-success">Publish</button>
                            </div>
                            <div class="col-xs-3">
                                <a href="~/" class="btn btn-danger">Cancel</a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-5 col-xs-offset-5 centerBlock">
                            <i id="loading" class="fa fa-refresh fa-spin fa-5x fa-fw hide"></i>
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>

                </form>
          
            </div>

        </div>
    </div>
</body>




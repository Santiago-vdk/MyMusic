@model MyFan_Webapp.Areas.Bands.Models.BandProfileViewModel
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery -->
    <script src="~/assets/lib/jquery/jquery-2.2.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap -->
    <link crossorigin="anonymous" href="~/assets/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/assets/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Bree+Serif' rel='stylesheet' type='text/css'>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/lib/font-awesome/css/font-awesome.min.css">
    <!-- Style -->
    <link href="~/assets/common/css/Main.css" rel="stylesheet" type="text/css">
    <script src="~/assets/common/js/Fans.js" type="text/javascript"></script>
    <script src="~/assets/common/js/Bands.js" type="text/javascript"></script>

</head>
<body onload="updateBodyBand(@Model.Id);">
    <!-- Container -->
    <div class="container-fluid">
        <!-- Header Section -->
        <div id="header-section" class="row">
            <!-- Left Section -->
            <div class="col-xs-3 left">
                <div class="centerBlock">
                    <!-- Logo -->
                    <a href="~/Bands/@Model.Id"><img class="img-responsive" src="~/assets/common/img/logo2.png"></a>
                </div>
            </div>
            <!-- Middle Section -->
            <div id="middle-section" class="col-xs-6">


                <!-- Page Title -->
                <div class="row page-title">
             
                        <h5>@ViewBag.Message</h5>
                        <!--
                            <div class="row">
                            <div class="col-xs-6 center-block" >
                                <div class="circle">12K</div>
                            </div>
                            <div class="col-xs-6 center-block">
                                <img class="img-circle img-calif" src="~/assets/common/img/califications/Acetato-rare.png">
                                <br />
                            </div>
                        </div>

                            -->

                        <div class="col-md-12 center-block no-float">
                            <div class="col-md-2"><div class="circle" id="BandFollowers"> <i class="fa fa-spinner fa-spin fa-lg fa-fw"></i> </div></div>
                            <div class="col-md-8"><h1><a href="~/Bands/@Model.Id">My Wall</a></h1></div>
                            <div class="col-md-2"><img class="img-circle img-calif" id="BandCalification"> </div>
                        </div>

                   
                </div>
            </div>
            <!-- Right Section -->
            <div id="right-section" class="col-xs-3">
                <div class="row">
                    <!-- Profile Picture -->
                    <div id="user-profile-picture" class="col-xs-6">
                        <a href="~/Bands/@Model.Id"><img class="img-circle" src="~/Users/image?Id=@Model.Id"></a>
                    </div>
                    <!-- Profile Info -->
                    <div id="profile-manage" class="col-xs-6">
                        <!-- Welcome Text -->
                        <div class="row">
                            <h3 id="welcome">Hi, @Model.Name!</h3>
                        </div>
                        <!-- My Profile  -->
                        <div class="row">
                            <a href="~/Bands/@Model.Id/profile"><h4 id="myprofile"><u>My Profile</u></h4></a>
                        </div>
                    </div>
                </div>

                <div id="user-button-menu" class="row">
                    <!-- Button Group -->
                    <a class="btn btn-default btn-text" href="~/Bands/@Model.Id">Home <i class="fa fa-home" aria-hidden="true"></i></a>
                    <a class="btn btn-default btn-text" href="~/Logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
                </div>
            </div>

        </div>
        <!-- Artwork Section -->
        <div id="artwork-section" class="row">
            <div>
                <h2 class="artwork-header">Artwork Section  <a href="/Bands/@Model.Id/Albums/Create"><i class="fa fa-plus-circle" aria-hidden="true"></i></a></h2>
            </div>
            <div class="row align-center">

                <!-- Previous -->
                <div id="previous" class="col-md-1">
                    <button class="half-circle">
                        <div class="icon">
                            <i class="fa fa-angle-left  fa-3x" aria-hidden="true"></i>
                        </div>
                    </button>
                </div>
                <div class="col-md-10">
                    @{
                        if (Model.Albums != null)
                        {
                            foreach (var album in Model.Albums)
                            {
                                <div class="inline">
                                    <a href="@Url.Action("Index", "Albums", new { userId = Model.Id , id = @album.Id })">
                                        <img class="img-responsive" src="~/Users/imageAlbum?Id=@album.Id">
                                        <p class="artwork-name">@album.Name</p>
                                        <small class="artwork-date">@album.DateCreation</small>

                                    </a>
                                </div>
                            }

                        }
                    }

                </div>
                <!-- Next -->
                <div id="next" class="col-md-1">
                    <button class="half-circle">
                        <div class="icon">
                            <i class="fa fa-angle-right  fa-3x" aria-hidden="true"></i>
                        </div>
                    </button>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>

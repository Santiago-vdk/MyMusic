@model MyFan_Webapp.Areas.Bands.Models.BandProfileViewModel

@{
    ViewBag.Title = "Crear";
    Layout = "~/Areas/Bands/Views/Shared/_BandProfileLayout.cshtml";
}

<head>
    <!-- jQuery Validate -->
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.7/jquery.validate.min.js"></script>
    <!-- Bootstrap Select -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
    <!-- Style -->
    <link crossorigin="anonymous" href="~/assets/common/css/foms/Register.css" rel="stylesheet">
    <script src="~/assets/common/js/Processing.js"></script>
    <script src="~/assets/common/js/forms/AlbumCreateForm.js"></script>
    <link rel="stylesheet" href="~/assets/common/css/Profile.css">
    <!-- Bootbox -->
    <script src="~/assets/lib/BootBox/bootbox.min.js"></script>

</head>

<body>
    <!-- Post-Section -->
    <div id="post-section" class="row">
        <h2 class="post-header">Add new album</h2>
        <div class="row">
            <div class="col-md-8">

                <form id="form-new-album" class='form-horizontal'>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputPicture">Artwork</label>
                        </div>
                        <div class="col-xs-9">

                            <label class="btn btn-success btn-file">
                                Browse... <input id="imgInp" name="imgInp" type="file">
                            </label><small>Only 400x400, .jpg .png .gif, less than 2Mb</small>

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputAlbumName">Album Name:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" placeholder="Album Name" name="AlbumName" id="AlbumName" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputLabel">Record Label:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" placeholder="Record Label Name" name="Label" id="inputLabel" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputDateRelease">Release Date:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="date" id="inputDateRelease" name="DateRelease">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="selectMusicalGenre">Musical Genres</label>
                        </div>
                        <div class="col-xs-9">                                                                              <!-- multiple data-max-options="5"-->
                            <select class="selectpicker" data-live-search="true" id="selectGenres" name="Genres" title="Choose five musical genres" data-width="100%">
                                @foreach (var genre in Model.EditForm.genres)
                                {
                                    <option id="@genre.Id" data-tokens="@genre.Name">@genre.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-offset-4 col-xs-3">
                                <button id="post-album-form" type="button" class="btn btn-success">Publish</button>
                            </div>
                            <div class="col-xs-3">
                                <a href="~/" class="btn btn-danger">Back</a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-5 col-xs-offset-5 centerBlock">

                            <i id="loading" class="fa fa-refresh fa-spin fa-5x fa-fw hide"></i>
                            <span class="sr-only">Loading...</span>

                            <a id="AddSong" class="btn btn-primary hide">Add a Song</a>
                        </div>
                    </div>
                    <br />
                </form>



                <div class="container">
                    <div class="row clearfix">
                        <div class="col-md-12 column">
                            <table class="table table-bordered table-hover" id="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            Name
                                        </th>
                                        <th class="text-center">
                                            Duration
                                        </th>
                                        <th class="text-center">
                                            Live
                                        </th>
                                        <th class="text-center">
                                            Limited Edition
                                        </th>
                                        <th class="text-center">
                                            Link
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                 </div>

 

            </div>
            <div class="row ">
                <img id="album-pic" class="img-responsive img-circle" src="" />
            </div>
        </div>
    </div>
</body>




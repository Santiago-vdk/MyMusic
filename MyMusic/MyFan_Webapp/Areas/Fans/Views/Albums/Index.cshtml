@model MyFan_Webapp.Areas.Fans.Models.FanProfileViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Fans/Views/Shared/_FanInBandProfileLayout.cshtml";
}
<head>
    <!-- Style -->
    <link rel="stylesheet" href="~/assets/common/css/Profile.css">
    <script src="~/assets/common/js/Albums.js"></script>
    <script>GetDiskReviews(@Model.Id, @Model.BandProfile.Id, @Model.BandProfile.Disk.Id);</script>
</head>

<body >
    <!-- Post-Section -->
    <div id="post-section" class="row">
        <h2 class="post-header">Album - @Model.BandProfile.Disk.Name</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <h3><b>Record Label:</b> @Model.BandProfile.Disk.Label</h3>
                            <h3><b>Release Date:</b> @Model.BandProfile.Disk.DateCreation</h3>
                            <h3><b>Genre:</b> @Model.BandProfile.Disk.Genre</h3>
                        </div>
                        <div class="col-md-6">
                            <img id="album-pic-index" class="img-responsive img-circle" src="~/Users/imageAlbum?Id=@Model.BandProfile.Disk.Id" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-hover" id="table">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        Name
                                    </th>
                                    <th class="text-center">
                                        Duration
                                    </th>
                                    <th class="text-center">
                                        Live
                                    </th>
                                    <th class="text-center">
                                        Limited Edition
                                    </th>
                                    <th class="text-center">
                                        Link
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var song in Model.BandProfile.Disk.Songs)
                                {
                                    <tr><td>@song.Name</td><td>@song.Duration</td><td>@song.Type</td><td>@song.LimitedEdition</td><td><a href="@song.Link" target="_blank">Go To Link</a></td></tr>
                                }
                            </tbody>
                        </table>

                    </div>


                </div>




            </div>

            <div id="reviews_show" class="col-md-3">
                <div id="review-section-title" class="row">
                    <h2>Album Reviews</h2>
                </div>

                <form id="form-new-album" action="~/Fans/@Model.Id/Bands/@Model.BandProfile.Id/Albums/PostReview/@Model.BandProfile.Disk.Id" class='form-horizontal'>

                    <input class="form-control" name="fanId" value="@Model.Id" type="hidden"/>
                    <input class="form-control" name="bandId" value="@Model.BandProfile.Id" type="hidden" />
                    <input class="form-control" name="albumId" value="@Model.BandProfile.Disk.Id" type="hidden" />
                    <input class="form-control" name="fanName" value="@Model.Name" type="hidden" />
                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputAlbumName">Rate:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" placeholder="Type a number from 1 to 5" name="rate" id="AlbumName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 text-right">
                            <label for="inputAlbumName">Comment:</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" placeholder="Comment" name="comment" id="AlbumName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-offset-4 col-xs-3">
                                <button id="post-album-form" type="submit" class="btn btn-success">Publish</button>
                            </div>
                        </div>
                    </div>

                    
                   
                </form>



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery -->
    <script src="~/assets/lib/jquery/jquery-2.2.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap -->
    <link crossorigin="anonymous" href="~/assets/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/assets/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Bree+Serif' rel='stylesheet' type='text/css'>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/lib/font-awesome/css/font-awesome.min.css">
    <!-- Style -->
    <link href="~/assets/common/css/Main.css" rel="stylesheet" type="text/css">
</head>
<body>
    <!-- Container -->
    <div class="container-fluid">
        <!-- Header Section -->
        <div id="header-section" class="row">
            <!-- Left Section -->
            <div class="col-xs-3 left">
                <div class="centerBlock">
                    <!-- Logo -->
                    <a href="~/Fans/@Model.Id"><img class="img-responsive" src="~/assets/common/img/logo2.png"></a>
                </div>
            </div>
            <!-- Middle Section -->
            <div id="middle-section" class="col-xs-6">
                <!-- Search Box -->
                <div class="row search-box">
                    <div>
                        <div class="col-xs-12">
                            <div class="input-group" id="adv-search">
                                <input type="text" class="form-control" placeholder="Search for your favorite bands and artists..." />
                                <div class="input-group-btn">
                                    <div class="btn-group" role="group">
                                        <div class="dropdown dropdown-lg">
                                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                                <form class="form-horizontal" role="form">

                                                    <div class="form-group">
                                                        <label for="contain">Band/Artist Name</label>
                                                        <input class="form-control" type="text" />
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="filter">Contry</label>
                                                        <select class="form-control">
                                                            <option value="0" selected>Any Country</option>
                                                            <option value="1">Costa Rica</option>
                                                            <option value="2">Canada</option>
                                                            <option value="3">United States</option>
                                                            <option value="4">Brazil</option>
                                                        </select>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="filter">Genres</label>
                                                        <select class="form-control">
                                                            <option value="0" selected>All Genres</option>
                                                            <option value="1">Rock</option>
                                                            <option value="2">Indie</option>
                                                            <option value="3">Metal</option>
                                                            <option value="4">Reggae</option>
                                                        </select>
                                                    </div>


                                                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                                </form>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page Title -->
                <div class="row page-title">
                    <div class="col-md-6 center-block no-float">
                        <h1>My Wall</h1>
                        <h5>@ViewBag.Message</h5>
                    </div>
                </div>
            </div>
            <!-- Right Section -->
            <div id="right-section" class="col-xs-3">
                <div class="row">
                    <!-- Profile Picture -->
                    <div id="user-profile-picture" class="col-xs-6">
                        <a href="~/Fans/@Model.Id"><img class="img-circle" src="~/Users/image?Id=@Model.Id"></a>
                    </div>
                    <!-- Profile Info -->
                    <div id="profile-manage" class="col-xs-6">
                        <!-- Welcome Text -->
                        <div class="row">
                            <h3 id="welcome">Hi, @Model.Username !</h3>
                        </div>
                        <!-- My Profile  -->
                        <div class="row">

                           <a href="~/Fans/Profiles/@Model.Id"><h4 id="myprofile"><u>My Profile</u></h4></a>
                            


                          
                        </div>
                    </div>
                </div>

                <div id="user-button-menu" class="row">
                    <!-- Button Group -->
                    <a class="btn btn-default btn-text" href="~/Fans/@Model.Id">Home <i class="fa fa-home" aria-hidden="true"></i></a>
                    <a class="btn btn-default btn-text" href="~/Logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
                </div>
            </div>

        </div>
        <!-- Artwork Section -->
        <div id="artwork-section" class="row">
            <div>
                <h2 class="artwork-header">Artwork Section</h2>
            </div>
            <div class="row align-center">

                <!-- Previous -->
                <div id="previous" class="col-md-1">
                    <button class="half-circle">
                        <div class="icon">
                            <i class="fa fa-angle-left  fa-3x" aria-hidden="true"></i>
                        </div>
                    </button>
                </div>
                <div class="col-md-10">

                    @foreach (var band in Model.Bands)
                    {
                        <div class="inline">
                            <a href="~/Bands/@band.Id">
                                <img class="img-responsive" src="~/Users/image?Id=@band.Id">
                                <p class="artwork-name">@band.Name</p>
                                <small class="artwork-date">@band.DateCreation</small>

                            </a>
                        </div>
                    }
                </div>
                <!-- Next -->
                <div id="next" class="col-md-1">
                    <button class="half-circle">
                        <div class="icon">
                            <i class="fa fa-angle-right  fa-3x" aria-hidden="true"></i>
                        </div>
                    </button>
                </div>
            </div>
        </div>
        </div>

        @RenderBody()

       
</body>
</html>
